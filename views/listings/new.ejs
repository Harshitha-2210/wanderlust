<% layout("/layouts/boilerplate.ejs")%>
    <div class="row mt-3">
     <div class="col-8 offset-2">
        <!-- <br><br> -->
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

    <div class="mb-3">
      <lable for="title" class="form-label" >Title</lable>
      <input type="text" class="form-control" name="listing[title]" placeholder="Add a catchy title" required>
      <div class="valid-feedback">Title looks good</div>
   </div>

   <div class="mb-3">
      <lable for="category" class="form-label">Category</lable>
      <select name="listing[category]"  class="form-control" required>
        <option value="" disabled selected>Select a category</option>
        <option value="Trending">Trending</option>
        <option value="Rooms">Rooms</option>
        <option value="Iconic Cities">Iconic Cities</option>
        <option value="Mountains">Mountains</option>
        <option value="Amazing pools">Amazing pools</option>
        <option value="Camping">Camping</option>
        <option value="Farms">Farms</option>
        <option value="Arctic">Arctic</option>
        <option value="Domes">Domes</option>
        <option value="Boats">Boats</option>
        <option value="Towers">Towers</option>
      </select>
      <div class="invalid-feedback">please select a category</div>
   </div>


   <div class="mb-3">
      <lable for="description" class="form-label">Description</lable>
      <textarea name="listing[description]"  class="form-control" required></textarea>
      <div class="invalid-feedback">please enter a short description</div>
   </div>


   <div class="mb-3">
    <lable for="image" class="form-label">Upload Listing Image</lable>
    <input type="file" name="listing[image][url]" placeholder="enter image URL/link" class="form-control" required>
   </div>

    <div class="row">
    <div class="mb-3 col-md-4">
      <lable for="price" class="form-label">Price</lable>
      <input  name="listing[price]" placeholder="1200" class="form-control" required>
      <div class="invalid-feedback">Price should be valid</div>
    </div>
   
    <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>
        <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
        <div class="invalid-feedback">country name should be valid</div>
    </div>
    </div>

    <div class="mb-3">
      <lable for="location" class="form-label">Location</lable>
      <input type="text" name="listing[location]" placeholder="Jaipur Rajasthan" class="form-control" required>
      <div class="invalid-feedback">location should be valid</div>
    </div>

    
   
    <button class="btn btn-dark add-btn mt-3">Add</button>
  


   </form>
  </div>
</div>

